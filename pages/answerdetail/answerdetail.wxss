.container .upsubmit {
  width: 94%;
  margin-top: 20rpx;
}

.container .upsubmit .submit {
  width: 200rpx;
  float: right;
}

.container .upsubmit .submit .sub {
  height: 70rpx;
  line-height: 70rpx;
  color: #fff;
  background: #3bbac5;
}

.an_icon {
  width: 40rpx;
  height: 180rpx;
  display: flex;
  float: left;
  margin-left: 20rpx;
  padding: 20rpx 0;
  position:relative;
}

.anclose {
  font-size: 35rpx;
  /*float: left;
  margin-top: 14rpx;
  margin-left: -44rpx;*/
  position: absolute;
  z-index: 100000000;
  color: #e85a88;
  width:50rpx;
  height:50rpx;
  margin-top:10rpx;
}

.andd {
  align-self: flex-end;
  position: absolute;
  font-size: 35rpx;
  width:50rpx;
  height:50rpx;
