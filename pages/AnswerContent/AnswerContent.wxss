/* pages/AnswerContent/AnswerContent.wxss */
@import '../style/common.wxss';

.container {
  justify-content: none;
  background: #eee;
}

.enlargehide {
  display: none;
}

.enlargeshow {
  display: block;
}

.enlargelisthide {
  display: none;
}

.enlargelistshow {
  display: block;
}

.enlargecover {
  width: 100%;
  height: 1344rpx;
  background: #000;
  position: fixed;
  top: 0rpx;
  z-index: 100000000002;
  opacity: 0.98;
  overflow-y: hidden;
}

.enlargecoverlist {
  width: 100%;
  height: 1344rpx;
  background: #000;
  position: fixed;
  top: 0rpx;
  z-index: 1000000000000000000000000000002;
  opacity: 0.98;
  touch-action: none;
  overflow-y: hidden;
}

.swiper-box {
  position: fixed;
  z-index: 100000000001;
  width: 100%;
  height: 39%;
  top: 50%;
  left: 50%;
  margin: -34% 0 0 -42.5%;
}

.swiper-box1 {
  position: fixed;
  z-index: 100000000001;
  width: 100%;
  height: 39.5%;
  top: 50%;
  left: 50%;
  margin: -34% 0 0 -42.5%;
}

.active::before {
  content: "\e925";
  color: #bed636;
}

.icon-new42 {
  color: #bed636;
}

.user_header {
  width: 100%;
  border-top: 2rpx solid #e7e7e7;
  border-bottom: 2rpx solid #e7e7e7;
  background: #fff;
}

.user_header .users {
  width: 94%;
  height: 94rpx;
  margin: 0 auto;
}

.user_header .users .anser_title {
  float: left;
  width: 70%;
  max-width:70%;
  /*height: 67rpx;*/
  padding-top:27rpx;

}

.user_header .users .anser_title .an_icon {
  line-height: 70rpx;
  font-size: 32rpx;
}

.user_header .users .anser_title text {
  height: 94rpx;
  /*line-height: 94rpx;*/
  font-size: 30rpx;
}

.user_header .users .anser_title text:nth-of-type(2) {
  padding-left: 8rpx;
}

.usernew41::before {
  color: #f4dd26;
}

.user_header .users .username {
  float: right;
  width: 30%;
  height: 94rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  overflow: hidden;
}

.user_header .users .username image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.user_header .users .username text {
  font-size: 28rpx;
}

.wrap_content {
  background: #fff;
  width: 100%;
}

.up_content {
  width: 95%;
  padding-top: 10rpx;
  margin: 0 auto;
}

.up_content .word_content {
  font-size: 30rpx;
  margin-bottom: 20rpx;
  display: block;
}

.up_content .img_content {
  width: 100%;
}

.up_content .img_content image {
  width: 180rpx;
  height: 180rpx;
  /*float: left;*/
  margin: 10rpx 0 0 20rpx;
  margin-bottom: 10rpx;
}

.user_answer {
  width: 100%;
}

.user_answer .user_list {
  width: 94%;
  background: #fff;
  margin: 10rpx auto 0;
  position: relative;
  border: 2rpx solid #ddd;
}

.user_answer .user_list .listheader {
  height: 100rpx;
}

.user_answer .user_list .listheader text {
  font-size: 30rpx;
  height: 90rpx;
  line-height: 90rpx;
  float: right;
  margin-right:10rpx;
}

.user_answer .user_list .listheader .userhead {
  width: 500rpx;
  display: flex;
  align-items: center;
  float: left;
  margin-left: 10rpx;
  max-width:500rpx;
  overflow: hidden;
}

.user_answer .user_list .listheader .userhead image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.user_answer .user_list .listheader .userhead text {
  font-size: 30rpx;
  margin-left: 10rpx;
}

.user_list .list_message {
  font-size: 30rpx;
  width: 84%;
  margin: 0 auto;
}

.user_list .user_answerimg {
  width: 86%;
  margin: 10rpx auto;
}

.user_list .user_answerimg image {
  margin-left: 10rpx;
  width: 180rpx;
  height: 180rpx;
}

.nice_wrap {
  width: 100%;
  height: 70rpx;
}

.nice {
  float: right;
  padding-top: 10rpx;
  margin-right: 10rpx;
}

.nice .nice_zan {
  display: inline-block;
}

.eye {
  float: left;
  margin-right: 4rpx;
  margin-top:8rpx;
}

.eye image {
  width: 48rpx;
  height: 32rpx;
}

.nice .nice_ping {
  display: inline-block;
}

.my_conment {
  width: 100%;
  border-top: 2rpx solid #ddd;
  margin-top: 10rpx;
}

.my_conment .conment {
  width: 90%;
  margin: 0 auto;
}

.my_conment .conment text {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 38rpx;
}

.my_conment .conment input {
  border: 2rpx solid #e0e2df;
  border-radius: 20rpx;
  padding-left: 20rpx;
  font-size: 25rpx;
  background-color: #fff;
  height: 66rpx;
  line-height: 66rpx;
}

.my_conment .addimg {
  width: 94%;
  margin: 20rpx auto 0;
}

.my_conment .addimg .item-img {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx solid #adaead;
  position: relative;
  float: left;
  margin: 0 0 10rpx 14rpx;
  background-color: #fff;
  border-radius: 20rpx;
}

.my_conment .addimg .item-img image {
  width: 200rpx;
  height: 200rpx;
  position: relative;
  z-index: 100000000000;
  border-radius: 20rpx;
}

.my_conment .addimg .item-img .word_content {
  position: absolute;
  top: 50%;
  left: 50%;
  margin: -36rpx 0 0 -30rpx;
  color: #adaead;
}

.add {
  position: absolute;
  left: -46rpx;
  font-size: 30rpx;
  margin-top: 20rpx;
}

.add::before {
  color: #adaead;
}

.wordadd {
  font-size: 24rpx;
}

.my_conment .addimg .an_icon {
  float: left;
  height: 172rpx;
  margin-top: 20rpx;
  position: relative;
  margin-left: 20rpx;
}

.my_conment .addimg .an_icon .anclose {
  position: absolute;
  color: #e85a88;
  width:50rpx;
  height:50rpx;
}

.my_conment .addimg .an_icon .andd {
  position: absolute;
  bottom: 0;
  width:50rpx;
  height:50rpx;
}

.upsubmit {
  width: 100%;
  padding-top: 40rpx;
  padding-bottom: 90rpx;
  position: relative;
}

.upsubmit .submit {
  width: 26%;
  position: absolute;
  right: 40rpx;
}

.upsubmit .submit .sub {
  height: 64rpx;
  line-height: 64rpx;
  color: #fff;
  background: #3bbac5;
  border-radius: 20rpx;
}
