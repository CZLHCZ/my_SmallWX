/* pages/My/My.wxss */
@import '../style/weui.wxss';
@import '../style/common.wxss';

.showhide {
  display: none !important;
}

.container {
  background: #f0eff0;
}

.nomore {
  font-size: 30rpx;
}

.my_header {
  width: 100%;
  height: 400rpx;
  max-height: 400rpx;
  background: url("https://api.dzbake.com/Public/xcx/img/my_header.png") no-repeat left center;
  background-size: 100% 400rpx;
  border-bottom: 6rpx solid #c4c4c4;
  position: relative;
}

.my_header  image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  position: absolute;
  top: 50%;
  left: 50%;
  margin: -100rpx 0 0 -60rpx;
}

.my_header  .username {
  font-size: 38rpx;
  text-align: center;
  width: 100%;
  position: absolute;
  top: 55%;
  color: #fff;
  font-weight: 600;
}

.nav {
  width: 100%;
  border-bottom: 10rpx solid #c4c4c4;
  padding: 6rpx 0;
}

.nav .nav_content {
  width: 100%;
  height: 100rpx;
  display: flex;
}

.navsize {
  line-height: 100rpx;
  text-align: center;
  flex: 1;
  color: #000;
  font-weight: bold;
  font-size: 28rpx;
}

.default {
  background: url('https://api.dzbake.com/Public/xcx/img/write24.png') no-repeat center center;
  background-size: 90rpx 90rpx;
}

.default1 {
  background: url('https://api.dzbake.com/Public/xcx/img/n25.png') no-repeat center center;
  background-size: 90rpx 90rpx;
}

.default2 {
  background: url('https://api.dzbake.com/Public/xcx/img/nice26.png') no-repeat center center;
  background-size: 90rpx 90rpx;
}

.default3 {
  background: url('https://api.dzbake.com/Public/xcx/img/x27.png') no-repeat center center;
  background-size: 90rpx 90rpx;
}

.red {
  background: url('https://api.dzbake.com/Public/xcx/img/write20.png') no-repeat center center;
  background-size: 90rpx 90rpx;
}

.blue {
  background: url('https://api.dzbake.com/Public/xcx/img/n21.png') no-repeat center center;
  background-size: 90rpx 90rpx;
}

.yellow {
  background: url('https://api.dzbake.com/Public/xcx/img/nice22.png') no-repeat center center;
  background-size: 90rpx 90rpx;
}

.green {
  background: url('https://api.dzbake.com/Public/xcx/img/x23.png') no-repeat center center;
  background-size: 90rpx 90rpx;
}

.show {
  width: 100%;
}

.hidden {
  display: none;
  width: 100%;
}

.my_icon {
  position: absolute;
  left: 16rpx;
  color: #f4dd26;
  margin-top: 14rpx;
}

.Menu .semenu {
  border-bottom: 2rpx solid #cac6c5;
}

.Menu .semenu .menuname {
  position: relative;
}

.Menu .semenu .menuname text {
  font-size: 30rpx;
  width: 84%;
  height: 48rpx;
  line-height: 66rpx;
  max-width: 84%;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  display: inline-block;
  padding-left: 45rpx;
}

.Menu .semenu .menuname .myiconclose {
  position: absolute;
  margin-top: 15rpx;
  color: #5c5d5d;
  font-size: 34rpx;
  right: 0rpx;
  width:50rpx;
  height:45rpx;
}

.Menu .semenu .menuimg {
  width: 96%;
  height: 400rpx;
  margin: 0 auto;
}

.Menu .semenu .menuimg image {
  width: 100%;
  height: 400rpx;
}

.Menu .semenu .nice_wrap {
  width: 100%;
  height: 60rpx;
  padding-top: 10rpx;
}

.Menu .semenu .nice {
  float: right;
}

.Menu .semenu .nice .nice_zan {
  display: inline-block;
  margin-right: 68rpx;
}

.Menu .semenu .nice .nice_zan text:nth-of-type(1) {
  margin-top: 9rpx;
  float: left;
}

.Menu .semenu .nice .nice_ping {
  display: inline-block;
  margin-right: 20rpx;
}

.Menu .semenu .nice .nice_ping text:nth-of-type(1) {
  margin-left: -52rpx;
  margin-top: 9rpx;
  float: left;
  /*color: #e85a88;*/
  color: #bed636;
}

.comment, .nicehand {
  margin-left: 10rpx;
}

.Question {
  width: 100%;
}

.Question  .question_wrap .question_list {
  width: 96%;
  border: 2rpx solid #e0dfdd;
  margin: 20rpx auto;
  background: #fff;
  position: relative;
}

.Question  .question_wrap  .topicon {
  height: 50rpx;
  position: absolute;
  right: 0;
  z-index: 10000;
  margin: 10rpx 25rpx 0 0;
}

.Question  .question_wrap .question_list .title {
  font-size: 36rpx;
  font-weight: bold;
  padding-left: 24rpx;
  display: inline-block;
  width: 89%;
  max-width: 89%;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  /*margin-top:15rpx*/
  height: 55rpx;
  line-height: 74rpx;
  color: #1b1b20;
}

.Question  .question_wrap .question_list .que_content {
  font-size: 30rpx;
  width: 93%;
  margin: 0rpx auto 0;
  height: 92rpx;
  color: #5c5d5d;
}

.Question  .question_wrap .question_list .nice_wrap {
  width: 100%;
  height: 70rpx;
  padding-top: 20rpx;
}

.Question  .question_wrap .question_list .nice_wrap .nice {
  float: right;
}

.Question  .question_wrap .question_list .nice_wrap .nice .nice_zan {
  display: inline-block;
  margin-right: 68rpx;
}

.Question  .question_wrap .question_list .nice_wrap .nice .nice_zan text:nth-of-type(1) {
  margin-left: -52rpx;
  margin-top: 9rpx;
  float: left;
}

.Question  .question_wrap .question_list .nice_wrap .nice .nice_ping {
  display: inline-block;
  margin-right: 20rpx;
}

.Question  .question_wrap .question_list .nice_wrap .nice_ping text:nth-of-type(1) {
  margin-left: -52rpx;
  margin-top: 9rpx;
  float: left;
  color: #e85a88;
}

.footer_nomore {
  width: 100%;
  font-size: 30rpx;
  text-align: center;
  background: #eee;
}
